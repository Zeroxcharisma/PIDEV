{% extends 'admin/baseBack.html.twig' %}

{% block title %}Evenements{% endblock %}
{% block path %}
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Evenements </h2>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Accueil</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('evenement_index') }}">Liste des Evenements</a>
                        </li>
                        <li class="breadcrumb-item active"><a href="#">DÃ©taille de l'evenement</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Appercu</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                        <table>
                            <tr>
                                <td class="font-weight-bold">Id:</td>
                                <td>{{ evenement.id }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Lieu:</td>
                                <td>{{ evenement.lieu }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Type:</td>
                                <td>{{ evenement.type }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Date:</td>
                                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12">
                        <a href="{{ path('evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit</a>
                        <hr>
                        {{ include('admin/evenement/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- descreption start -->
    <div class="col-md-6 col-12 ">
        <div class="card">
            <div class="card-header">
                <div class="card-title mb-2">Description</div>
            </div>
            <div class="card-body">
                <p>{{ evenement.description }}</p>
            </div>
        </div>
    </div>

    <a href="{{ path('evenement_index') }}">back to list</a>
{% endblock %}