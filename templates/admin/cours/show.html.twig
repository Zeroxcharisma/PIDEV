{% extends 'admin/baseBack.html.twig' %}

{% block title %}Cours{% endblock %}
{% block path %}
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Cours </h2>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('cours_index') }}">Liste des Cours</a>
                        </li>
                        <li class="breadcrumb-item active"><a href="#">DÃ©taille du cour</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Appercu</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="users-view-image">
                        <img src="{{ asset('uploads/images/' ~ cour.image) }}" style = "width:200px ; height:200px" class="users-avatar-shadow w-100 rounded mb-2 pr-2 ml-1" alt="avatar">
                    </div>
                    <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                        <table>
                            <tr>
                                <td class="font-weight-bold">Id:</td>
                                <td>{{ cour.id }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Nom:</td>
                                <td>{{ cour.nom }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Nombre d'heure:</td>
                                <td>{{ cour.nbHeure }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">NomCoach:</td>
                                <td>{{ cour.nomCoach }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12">
                        <a href="{{ path('cours_edit', {'id': cour.id}) }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit</a>
                        <hr>
                        {{ include('admin/cours/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('cours_index') }}">back to list</a>
{% endblock %}