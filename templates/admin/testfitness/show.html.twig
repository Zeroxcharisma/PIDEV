{% extends 'admin/baseBack.html.twig' %}

{% block title %}Tests fitness{% endblock %}
{% block path %}
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Tests fitness </h2>
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Accueil</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('testfitness_index') }}">Liste des Tests</a>
                        </li>
                        <li class="breadcrumb-item active"><a href="#">Détaille de Test</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Appercu</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                        <table>
                            <tr>
                                <td class="font-weight-bold">Id:</td>
                                <td>{{ testfitness.id }}</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Durée:</td>
                                <td>{{ testfitness.duree }}</td>
                            </tr>

                            <tr>
                                <td class="font-weight-bold">Date:</td>
                                <td>{{ testfitness.dateTest ? testfitness.dateTest|date('Y-m-d') : '' }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-12">
                        <a href="{{ path('testfitness_edit', {'id': testfitness.id}) }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit</a>
                        <hr>
                        {{ include('admin/testfitness/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('testfitness_index') }}">back to list</a>
{% endblock %}